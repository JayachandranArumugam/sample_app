<h2>All users</h2>
<%= will_paginate %>
<ul class="users">
	<% @users.each do |user| %>
		<li>
			<%= link_to h(user.name), user %> 
			<% unless @user.microposts.empty? %>
			<table class="microposts">

			  <%= render @microposts %>
			</table>
			 
		  <% end %>
		</li>
	<% end %> 
</ul>
<%= will_paginate %>